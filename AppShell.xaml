       xmlns:local="clr-namespace:InterfazTicketsApp.Views"
       x:Class="InterfazTicketsApp.AppShell">

    <TabBar>
        <ShellContent Title="Buscar" Icon="icon_search.png" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Detalles" Icon="icon_details.png" ContentTemplate="{DataTemplate local:EventDetailPage}" />
        <ShellContent Title="Compra" Icon="icon_purchase.png" ContentTemplate="{DataTemplate local:PurchasePage}" />
        <ShellContent Title="Perfil" Icon="icon_profile.png" ContentTemplate="{DataTemplate local:UserProfilePage}" />
        <ShellContent Title="Comentarios" Icon="icon_comments.png" ContentTemplate="{DataTemplate local:CommentsPage}" />
    </TabBar>

</Shell>
