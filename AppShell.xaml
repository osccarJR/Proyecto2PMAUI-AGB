<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:InterfazTicketsApp.Views"
       x:Class="InterfazTicketsApp.AppShell">

    <TabBar>
        <ShellContent Title="Buscar Eventos" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Detalles del Evento" ContentTemplate="{DataTemplate local:EventDetailPage}" />
        <ShellContent Title="Compra de Tickets" ContentTemplate="{DataTemplate local:PurchasePage}" />
        <ShellContent Title="Perfil de Usuario" ContentTemplate="{DataTemplate local:UserProfilePage}" />
        <ShellContent Title="Comentarios" ContentTemplate="{DataTemplate local:CommentsPage}" />
    </TabBar>

</Shell>
