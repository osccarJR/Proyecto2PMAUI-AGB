<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:InterfazTicketsApp.Views"
    x:Class="InterfazTicketsApp.AppShell">

    <ShellContent Title="Buscar Eventos" ContentTemplate="{DataTemplate views:MainPage}" Route="Buscar" />
    <ShellContent Title="Compra de Tickets" ContentTemplate="{DataTemplate views:PurchasePage}" Route="Compra" />
    <ShellContent Title="Detalles del Evento" ContentTemplate="{DataTemplate views:EventoDetallePage}" Route="Detalles" />
    <ShellContent Title="Clima" ContentTemplate="{DataTemplate views:WeatherPage}" Route="Clima" />
    <ShellContent Title="Registros de Clima" ContentTemplate="{DataTemplate views:WeatherRecordsPage}" Route="WeatherRecords" />
</Shell>