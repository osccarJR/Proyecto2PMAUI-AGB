<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InterfazTicketsApp.Views.PurchasePage"
             Title="Compra de Tickets">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="20" Spacing="15">
                <!-- Título -->
                <Label Text="Compra de Tickets" Style="{StaticResource TitleLabel}" HorizontalOptions="Center"/>

                <!-- Información del Evento -->
                <StackLayout BackgroundColor="{StaticResource CardBackgroundColor}" Padding="10">
                    <Label x:Name="EventNameLabel" FontSize="22" TextColor="{StaticResource TextColor}" />
                    <Label x:Name="EventDateLabel" FontSize="18" TextColor="{StaticResource SecondaryTextColor}" />
                    <Label x:Name="EventLocationLabel" FontSize="18" TextColor="{StaticResource SecondaryTextColor}" />
                </StackLayout>

                <!-- Formulario de Compra -->
                <Entry x:Name="TicketQuantityEntry" Placeholder="Cantidad de tickets" Keyboard="Numeric" />
                <Entry x:Name="CardNameEntry" Placeholder="Nombre en la tarjeta" />
                <Entry x:Name="CardNumberEntry" Placeholder="Número de tarjeta" Keyboard="Numeric" />
                <Entry x:Name="CardExpiryEntry" Placeholder="Fecha de expiración (MM/AA)" Keyboard="Numeric" />
                <Entry x:Name="CardCVCEntry" Placeholder="CVC" Keyboard="Numeric" />

                <!-- Botón de Compra -->
                <Button Text="Comprar" Command="{Binding ConfirmPurchaseCommand}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
